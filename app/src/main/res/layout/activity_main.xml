<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prueba_listeners"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_interna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clase_interna"/>

    <Button
        android:id="@+id/btn_anonima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clase_anonima"/>

    <Button
        android:id="@+id/btn_3en1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clase_3_en_1"/>

    <Button
        android:id="@+id/btn_implements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m_todo_implements"/>

    <TextView
        android:id="@+id/tvRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>